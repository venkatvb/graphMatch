package logger;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;

public class Log {
	public static final String PATH_TO_LOG_FILE = "F:\\Graph Databases\\log\\log.txt";
	public static boolean isConnected = false;
	FileWriter file;
	public static void debug(String message) {
		if(isConnected == false) {
			connectToLogFile();
		}
	}
	
	public boolean connectToLogFile() throws FileNotFoundException {
		// returns true if the connection establishment is successful.
		file = new FileWriter(PATH_TO_LOG_FILE);
		return true;
	}
}
