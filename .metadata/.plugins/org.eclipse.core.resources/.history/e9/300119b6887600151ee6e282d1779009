package graph;

import java.util.ArrayList;

public class Graph {
	
	ArrayList<Node> graph = new ArrayList<Node>();
	
	public boolean addNode(int nodeId) {
		// Returns false if the node with the given nodeId is already present.
		// else adds the node to the given graph then creates.
		for ( Node node : graph ) {
			if(node.getNodeId() == nodeId) {
				// the node is already present in the graph.
				return false;
			}
		}
		graph.add(new Node(nodeId));
		return true;
	}
	
	public boolean addEdge(int nodeIdA, int nodeIdB) {
		return true;
	}
}
